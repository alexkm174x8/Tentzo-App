# Uncomment the next line to define a global platform for your project
platform :ios, '13.0'

target 'Tentzo-App' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Firebase SDKs
  pod 'Firebase/Core'              # Essential Firebase SDK (Core)
  pod 'Firebase/Auth'              # Firebase Authentication
  pod 'Firebase/Database'          # Firebase Realtime Database
  pod 'Firebase/Firestore'         # Firebase Firestore
  pod 'Firebase/Storage'           # Firebase Storage

  # SDWebImage for image caching
  pod 'SDWebImageSwiftUI'          # SDWebImageSwiftUI for easy image loading and caching

end
